@import "../../base/fn.wxss";

.weui-navbar {
    display: flex;
    position: absolute;
    z-index: 500;
    top: 0;
    width: 100%;
    background-color: #fafafa;
    border-bottom: 1rpx solid #CCCCCC;
}

.weui-navbar__item {
    position: relative;
    display: block;
    flex: 1;
    padding: 13px 0;
    text-align: center;
    font-size: 15px;
    border-right: 1rpx solid #CCCCCC;

    &:active {
        background-color: #ededed;
    }

    &.weui-bar__item_on {
        background-color: #eaeaea;
    }

    &:last-child {
        &:after {
            display: none;
        }
    }
}